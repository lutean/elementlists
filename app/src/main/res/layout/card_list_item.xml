<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/card_list_layout"
        android:visibility="visible"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="70.0dip">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.00">

            <ImageView android:id="@+id/card_list_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="15.0dip"
                android:layout_marginRight="15.0dip"
                android:src="@mipmap/facebook"
                android:scaleType="fitCenter" />

        </RelativeLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1.0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView android:textSize="17.0dip"
                android:textColor="@color/colorBlack"
                android:id="@+id/card_list_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:maxLines="1"
                />
            <TextView android:textSize="17.0dip"
                android:textColor="@color/colorBlack"
                android:id="@+id/card_list_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:maxLines="1"
                />

        </LinearLayout>
        <ImageView android:id="@+id/card_item_arrow"
            android:paddingLeft="2.0dip"
            android:layout_width="@dimen/main_header_item_menu_icon_width"
            android:layout_height="@dimen/main_header_item_menu_icon_height"
            android:layout_marginLeft="15.0dip"
            android:layout_marginRight="10.0dip"
            android:src="@mipmap/arrow"
            android:scaleType="fitCenter" />

    </LinearLayout>


</LinearLayout>